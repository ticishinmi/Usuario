var
  DM: TDM;

implementation

uses UFuncao;

{$R *.dfm}

procedure TDM.TBUsuarioAfterPost(DataSet: TDataSet);
begin
  try
      if  DM.Transacao.InTransaction then
        DM.Transacao.CommitRetaining;
  except
      DM.Transacao.RollbackRetaining;
  end;

end;

end.
